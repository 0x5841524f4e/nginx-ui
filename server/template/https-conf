server {
    listen {{ http_listen_port }};
    listen [::]:{{ http_listen_port }};

    server_name {{ server_name }};

    rewrite ^(.*)$  https://$host$1 permanent;
}

server {
    listen {{ https_listen_port }} ssl http2;
    listen [::]:{{ https_listen_port }} ssl http2;

    server_name {{ server_name }};

    {{ index }}

    {{ root }}

    # extra
    {{ extra }}
}
